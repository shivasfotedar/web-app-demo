pipeline{
    agent any
     parameters {
        string(name: 'Artifact_Name', defaultValue: 'Blue', description: 'Artifact to be used for deployment')
    }
    stages{
        stage("Create New Environment"){
            steps{
                dir('terraform'){
                    withAWS(credentials: 'aws_creds', region: 'us-east-1') {
                        sh 'terraform init'
                        sh 'bash setup.sh'
                        sh 'terraform plan'
                    }
                }
            }
        }
    }
  
}
